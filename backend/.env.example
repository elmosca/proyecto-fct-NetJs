# ========================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO
# Backend FCT - Proyecto de Microservicios
# ========================================

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=fct_backend_db

# ========================================
# CONFIGURACIÓN JWT
# ========================================
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION=1h

# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# CONFIGURACIÓN DE CORS
# ========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# ========================================
# CONFIGURACIÓN DE GOOGLE OAUTH
# ========================================
# Obtener desde: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# ========================================
# CONFIGURACIÓN DE EMAIL (GMAIL)
# ========================================
# Configurar App Password: https://support.google.com/accounts/answer/185833
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password

# ========================================
# CONFIGURACIÓN DE FRONTEND
# ========================================
FRONTEND_URL=http://localhost:8080

# ========================================
# CONFIGURACIÓN DE ARCHIVOS
# ========================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt

# ========================================
# CONFIGURACIÓN DE LOGS
# ========================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ========================================
# CONFIGURACIÓN DE RATE LIMITING
# ========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30000
